<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Sex</th>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
        <% if person.sex then %>
        <tr style="color: blue">
        <% else %>
        <tr style="color :red">
        <% end %>
        <td><%= person.age %></td>
        <td><%= person.sex %></td>
        <td><%= person.name %></td>
        <td><%= person.phone %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

